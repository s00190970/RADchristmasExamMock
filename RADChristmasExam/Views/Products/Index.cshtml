@model IEnumerable<BusinessDomainClasses.Product>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new { @class = "btn btn-success" })
</p>

@using (Html.BeginForm("Index", "Products", FormMethod.Get, new {@class = "form-inline"}))
{
    @Html.Label("search", "Product Description: ", new {@class="control-label"})
    @Html.TextBox("search", ViewBag.CurrentSearch as string, new {@class="form-control"})
    <input type="submit" value="Search" class="btn btn-primary"/>
}
<table class="table table-striped table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.ProductCategory.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ProductSupplier.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.QuantityInStock)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductCategory.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductSupplier.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Description)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.QuantityInStock)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.ProductID }, new { @class = "btn btn-warning btn-sm" })
            @Html.ActionLink("Details", "Details", new { id=item.ProductID }, new { @class = "btn btn-primary btn-sm" })
            @Html.ActionLink("Delete", "Delete", new { id=item.ProductID }, new { @class = "btn btn-danger btn-sm" })
        </td>
    </tr>
}

</table>
